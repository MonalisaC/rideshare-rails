<h2 class="pass-class"><%=page_title %></h2>

<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @passenger do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.label :is_deactivated %>
  <%= f.check_box :is_deactivated %>

<%= f.submit  %>

<% end %>
