<h2><%= page_title %></h2>

<%= form_for @trip do |f| %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :rating %>
<%= f.select :rating, [1, 2, 3, 4, 5]%>
<%= f.label :cost %>
<%= f.number_field :cost%>
<%= f.label :driver%>
<%= f.label @trip.driver.name %>
<%= f.label :passenger%>
<%= f.label @trip.passenger.name %>
<%= f.submit%>
<% end %>
