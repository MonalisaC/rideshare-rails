<h2> Trip #<%= @trip.id %> </h2>
<table>
<tr>
  <th>ID</th>
  <th>Date</th>
  <th>Driver</th>
  <th>Passenger</th>
  <th>Cost</th>
  <th>Rating</th>
</tr>
<tr>
  <td><%= @trip.id %></td>
  <td><%= @trip.date %></td>
  <td><%= link_to @trip.driver.name, driver_path(@trip.driver.id) %></td>
  <td><%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id)%></td>
  <td>$<%= @trip.cost_usd %></td>
  <td><%= @trip.rating %></td>
</tr>
</table>
