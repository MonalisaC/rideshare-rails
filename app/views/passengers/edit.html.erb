
<% if @passenger.is_deactivated != true %>
  <%= render partial: "form", locals: { page_title: "Edit #{@passenger.name}" } %>
  <br>
  <%= button_to "Deactivate", mark_passenger_deactivated_path(@passenger.id),
    method: :patch, data: { confirm: 'Are you sure?' } %>
<% else %>
  Passenger <%= @passenger.id %>  has been deactivated.
<% end %>
