<h1>Driver Info</h1>

<% if !@driver.is_deactivated %>
	<h2><%= @driver.name %></h2>
	<ul>
		<li>VIN: <%= @driver.vin %></li>
		<li>Car Make: <%= @driver.car_make %></li>
		<li>Car Model: <%= @driver.car_model %></li>
		<li>Average rating: <%= @driver.get_average_rating %></li>
		<li>Total earnings: $<%= @driver.get_total_earnings %> </li>
		<li>Status: <%= @driver.get_status %> </li>
	</ul>

	<ul>
		<li><%= link_to "Edit", edit_driver_path %></li>
		<li><%= link_to "Deactivate", mark_driver_deactivated_path(@driver.id),
			method: :patch, data: { confirm: 'Are you sure?' } %></li>
	</ul>

	<section class="trips-table">
		<% @driver.get_completed_trips.each do |trip| %>
				<ul>
					<li>Trip id: <%= link_to trip.id, trip_path(trip.id) %></li>
					<li>Date: <%= trip.date %></li>
					<li>Passenger: <%= trip.passenger.name %></li>
					<li>Earned: $<%= @driver.get_earned_amount(trip.cost_usd) %></li>
				 	<li>Rating: <%= trip.rating %></li>
				</ul>
			<!-- </li> -->
		<% end %>
	<!-- </ul> -->
	</section>
<% else %>
		<h2>Driver #<%= @driver.id %> is deactivated!</h2>
<% end %>
